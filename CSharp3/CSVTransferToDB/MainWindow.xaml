<Window x:Class="CSVTransferToDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVTransferToDB"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Peoples}" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="246" Margin="85,100,0,0" VerticalAlignment="Top" Width="413">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FIO}"/>
                <DataGridTextColumn Header="почта" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="телефон" Binding="{Binding Phone}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnLoad" Content="Загрузить CSV" HorizontalAlignment="Left" Margin="605,111,0,0" VerticalAlignment="Top" Width="116" Height="43" Click="btnLoad_Click"/>
        <Button Content="отправить в БД" HorizontalAlignment="Left" Margin="605,200,0,0" VerticalAlignment="Top" Width="116" Height="43"/>

    </Grid>
</Window>
