<Window x:Class="WpfTestMailSender.LetterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="LetterWindow" Height="450" Width="800" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" BorderBrush="{StaticResource SolidBorderBrush}" BorderThickness="3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="rtb" Margin="6"/>
        <StackPanel Grid.Row="1" Height="32" Margin="0,2,0,8" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="btnSave" Width="120" Content="Сохранить" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Width="120" Margin="10,0,0,0" Content="Отмена" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
