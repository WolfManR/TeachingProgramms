<UserControl x:Class="TabSwitcher.Scheduler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabSwitcher"
             mc:Ignorable="d">
    <DockPanel Height="20" DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:Scheduler}}">
        <Button x:Name="btnOpenLetterWindow" DockPanel.Dock="Left" Command="{Binding OpenLetterWindowCommand}" CommandParameter="{Binding Date}">
            <Image Source="Images/pencil.png" Width="16"  />
        </Button>
        <Button x:Name="btnRemoveScheduler" DockPanel.Dock="Right" Command="{Binding RemoveCommand}" CommandParameter="{Binding Date}">
            <Image Source="Images/delete.png" Width="16" />
        </Button>
        <TextBox x:Name="tbDate" Text="{Binding Date}"/>
    </DockPanel>
</UserControl>
